{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/utils/models/university.model.js",
    "src/utils/dbConnection.js",
    "src/utils/nodeMailer.js",
    "src/utils/models/subject.model.js",
    "src/utils/models/document.model.js",
    "src/utils/models/courses.model.js",
    "src/utils/models/college.model.js",
    "src/utils/models/user.model.js",
    "src/utils/models/notifications.model.js",
    "src/utils/models/messages.model.js"
  ],
  "exclude": ["node_modules"]
}
